version = "$(pkg_version)"
description = "PPX extension for bitstring"
requires = "compiler-libs.common ppx_core ppx_driver bitstring core_kernel"
archive(ppx_driver, byte) = "ppx_bitstring.cma"
archive(ppx_driver, native) = "ppx_bitstring.cmxa"
plugin(ppx_driver, byte) = "ppx_bitstring.cma"
plugin(ppx_driver, native) = "ppx_bitstring.cmxs"
ppx(-ppx_driver,-custom_ppx) = "./ppx"
exists_if = "ppx_bitstring.cma"
